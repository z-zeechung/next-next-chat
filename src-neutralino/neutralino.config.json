{
    "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
    "applicationId": "js.neutralino.sample",
    "version": "1.0.0",
    "defaultMode": "chrome",
    "port": 60721,
    "documentRoot": "/static/",
    "url": "/neutralino.html",
    "enableServer": true,
    "enableNativeAPI": true,
    "tokenSecurity": "one-time",
    "logging": {
        "enabled": true,
        "writeToLogFile": true
    },
    "nativeAllowList": [
        "app.*",
        "os.*",
        "debug.log"
    ],
    "serverHeaders": {
        "Service-Worker-Allowed": "/"
    },
    "modes": {
        "window": {
            "title": "NÂ²CHAT",
            "width": 1200,
            "height": 800,
            "minWidth": 500,
            "minHeight": 300,
            "center": true,
            "fullScreen": false,
            "alwaysOnTop": false,
            "icon": "/icon.png",
            "enableInspector": false,
            "borderless": false,
            "maximize": false,
            "hidden": false,
            "resizable": true,
            "exitProcessOnClose": true
        },
        "cloud": {
            "url": "/resources/#cloud",
            "nativeAllowList": ["app.*"]
        },
        "chrome": {
            "width": 800,
            "height": 500,
            "args": " --user-agent=\"Neutralinojs chrome mode\" --disable-web-security "
        }
    },
    "cli": {
        "binaryName": "neutralino",
        "resourcesPath": "/static/",
        "extensionsPath": "/extensions/",
        "clientLibrary": "/static/neutralino.js"
    }
}
